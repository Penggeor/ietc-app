{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "types": ["react-native", "jest"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      // "pages/*": ["src/pages/*"],
      // "components/*": ["src/components/*"],
      // "theme/*": ["src/theme/*"],
      // "utils/*": ["src/utils/*"],
      // "slices/*": ["src/slices/*"],
      // "style/*": ["src/style/*"],
      // "navigator/*": ["src/navigator/*"],
      // "localization/*": ["src/localization/*"]
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "include": ["src", "src/@types/.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.json",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
